<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieSearch.MainPage">

    <StackLayout>
        <Label Text="Movie Search" FontSize="20" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Entry Placeholder="Enter the film name" x:Name="movieTitleEntry" />
        <Label Text="Choose the genre" />
        <Picker x:Name="genrePicker">
            <Picker.Items>
                <x:String>Драма</x:String>
                <x:String>Комедия</x:String>
                <x:String>Боевик</x:String>
                <x:String>Фантастика</x:String>
                <!-- Add more genres -->
            </Picker.Items>
        </Picker>
        <Entry Placeholder="Enter the actor name" x:Name="actorNameEntry" />
        <Button Text="Search" Command="{Binding SearchCommand}" />
    </StackLayout>

</ContentPage>
